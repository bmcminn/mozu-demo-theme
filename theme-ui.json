{
  "title": "Navigation",
  "items": [
    {
      "xtype": "panel",
      "title": "General",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-checkbox",
          "name": "showAddressTypeDropdown",
          "fieldLabel": "Show Address Type dropdown in Address Forms (Residential/Commercial)"
        },
        {
          "xtype": "mz-input-checkbox",
          "name": "enablePartialCaching",
          "fieldLabel": "Enable partial caching using the Hypr {% partial_cache %} tag"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Extended Properties",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-checkbox",
          "name": "extendedPropertiesEnabled",
          "fieldLabel": "Enable Extended Properties (Tracking Strings)"
        },
        {
          "xtype": "mz-input-textarea",
          "name": "extendedPropertyParameters",
          "fieldLabel": "Query Parameters (comma separated)"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Search",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-checkbox",
          "name": "showChildCategoriesInFaceting",
          "fieldLabel": "Show two levels of the category hierarchy in faceting"
        },
        {
          "xtype": "mz-input-checkbox",
          "name": "useSearchAutocomplete",
          "fieldLabel": "Show search suggestions"
        },
        {
          "xtype": "mz-input-checkbox",
          "name": "suggestPriorSearchTerms",
          "fieldLabel": "Show search terms others used on this site in search suggestions",
          "enableIf": "useSearchAutocomplete"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Checkout",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-checkbox",
          "name": "isCvvSuppressed",
          "fieldLabel": "CVV Suppressed"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Anonymous Account Verification Options",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-checkbox",
          "name": "zipCodeEnabled",
          "fieldLabel": "Billing Zip Code"
        },
        {
          "xtype": "mz-input-checkbox",
          "name": "phoneNumberEnabled",
          "fieldLabel": "Billing Phone Number"
        },
        {
          "xtype": "mz-input-checkbox",
          "name": "billingEmailEnabled",
          "fieldLabel": "Billing Email"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Categories",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-categorymulti",
          "name": "hiddenCategories",
          "fieldLabel": "Hidden Categories"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Email Management",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-text",
          "name": "contactUsEmail",
          "fieldLabel": "Contact us Email"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "SEO Content",
      "collapsed": false,
      "items": [
        {
          "name": "canonicalHomepageSlug",
          "fieldLabel": "Homepage slug (update this anytime you change the homepage in Site Builder)",
          "xtype": "mz-input-text",
          "anchor": "90%"
        },
        {
          "name": "canonicalProtocol",
          "fieldLabel": "Force secure Canonical links (ex: <code>https://domain.tld/</code>)",
          "xtype": "mz-input-dropdown",
          "anchor": "90%",
          "store": [
            [
              "http",
              "HTTP"
            ],
            [
              "https",
              "HTTPS"
            ]
          ]
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Theme Appearance",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-color",
          "name": "bodyBackgroundColor",
          "fieldLabel": "Body Background Color"
        },
        {
          "xtype": "mz-input-image",
          "name": "bodyBackgroundImage",
          "fieldLabel": "Body Background Image",
          "dataFormat": "urlOnly"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Product Lists",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-checkbox",
          "name": "listProductCode",
          "fieldLabel": "Show product code in product lists"
        },
        {
          "xtype": "mz-input-checkbox",
          "name": "listProductShortDesc",
          "fieldLabel": "Show product short description in product lists"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Layout",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-dropdown",
          "name": "gutterWidth",
          "fieldLabel": "Base Margin Width",
          "allowBlank": false,
          "forceSelection": true,
          "store": [
            "15px",
            "20px",
            "25px",
            "30px",
            "35px"
          ]
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Text",
      "collapsed": false,
      "items": [
        {
          "xtype": "mz-input-selectmulti",
          "name": "loadGoogleFonts",
          "fieldLabel": "Load Google Fonts",
          "allowBlank": false,
          "forceSelection": true,
          "store": [
            "Source Sans Pro",
            "Open Sans",
            "Raleway",
            "Lora",
            "Rokkitt"
          ]
        },
        {
          "xtype": "mz-input-dropdown",
          "name": "primaryFont",
          "fieldLabel": "Primary Font",
          "allowBlank": false,
          "storeFrom": "loadGoogleFonts",
          "forceSelection": true
        },
        {
          "xtype": "mz-input-dropdown",
          "name": "fontSize",
          "fieldLabel": "Font Size",
          "allowBlank": false,
          "editable": false,
          "forceSelection": true,
          "store": [
            "12px",
            "14px",
            "16px",
            "18px",
            "20px"
          ]
        },
        {
          "xtype": "mz-input-color",
          "name": "textColor",
          "fieldLabel": "Text Color"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Paging",
      "collapsed": false,
      "items": [
        {
          "fieldLabel": "Show these page size options",
          "xtype": "mz-input-selectmulti",
          "name": "pageSizeOptions",
          "allowBlank": false,
          "forceSelection": true,
          "store": [
            15,
            25,
            50,
            100,
            500
          ]
        },
        {
          "fieldLabel": "Default items per page",
          "xtype": "mz-input-dropdown",
          "name": "defaultPageSize",
          "allowBlank": false,
          "forceSelection": true,
          "storeFrom": "pageSizeOptions"
        }
      ]
    },
    {
      "xtype": "panel",
      "title": "Navigation",
      "collapsed": false,
      "items": [
        {
          "fieldLabel": "Maximum Items In Main Nav",
          "xtype": "mz-input-number",
          "name": "maxTopLevelNavItems",
          "hideTrigger": false,
          "allowDecimal": false,
          "minValue": 1
        },
        {
          "fieldLabel": "Maximum Nav Item Label Length",
          "xtype": "mz-input-number",
          "name": "maxTopLevelNavLabelLength",
          "hideTrigger": false,
          "allowDecimal": false,
          "minValue": 1
        }
      ]
    }
  ]
}
