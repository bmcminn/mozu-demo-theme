{% extends "back-office/base" %}

{% block body-content %}

<table class="mz-printable-order mz-printable-order-details">
	<thead class="header">
		<tr>

			<th class="company-info">
				<div class="company-name">{{ customContent.companyName }}</div>
				<div class="company-contacts">{{ customContent.companyAddress }}</div>
				<div class="company-url">{{ customContent.websiteUrl }}</div>
			</th>

			<th class="order-essentials">
				<div class="order-number">
					<span class="label">Order #</span>
					<span>{{ model.orderNumber }}</span>
				</div>

				<div class="order-date">
					<span class="label">Date: </span>
					<span>{{ model.submittedDate|date(themeSettings.backofficeDateTimeFormat) }}</span>
				</div>
			</th>

		</tr>
	</thead>


	<tbody>
		<tr>
			<td colspan="4">
				<div class="section section-contacts">
					<table class="panes">
						<tbody>
							<tr>
								<td class="billing-address">

									<div class="label">Bill To</div>

									{% with model.billingInfo.billingContact as billingContact %}

										<div>
											{{ billingContact.firstName }} {{ billingContact.lastNameOrSurname }}
										</div>


										<div>
											{{ billingContact.address.address1 }}
										</div>


										{% if billingContact.address.address2 %}
											<div>
												{{ billingContact.address.address2 }}
											</div>
										{% endif %}


										{% if billingContact.address.address3 %}
											<div>
												{{ billingContact.address.address3 }}
											</div>
										{% endif %}


										{% if billingContact.address.address4 %}
											<div>
												{{ billingContact.address.address4 }}
											</div>
										{% endif %}


										<div>
											{{ billingContact.address.cityOrTown }}, {{ billingContact.address.stateOrProvince }} {{ billingContact.address.postalOrZipCode }}
										</div>


										{% if billingContact.phoneNumbers.home %}
											<div>
												{{ billingContact.phoneNumbers.home }} (home)
											</div>
										{% endif %}


										{% if billingContact.phoneNumbers.work %}
											<div>
												{{ billingContact.phoneNumbers.work }} (work)
											</div>
										{% endif %}


										{% if billingContact.phoneNumbers.mobile %}
											<div>
												{{ billingContact.phoneNumbers.mobile }} (mobile)
											</div>
										{% endif %}


										<div>
											{{ billingContact.email }}
										</div>

									{% endwith %}

								</td>


								<td class="shipping-address">

									<div class="label">Ship To</div>

									{% with model.fulfillmentInfo.fulfillmentContact as fulfillmentContact %}

										<div>
											{{ fulfillmentContact.firstName }} {{ fulfillmentContact.lastNameOrSurname }}
										</div>


										<div>
											{{ fulfillmentContact.address.address1 }}
										</div>


										{% if fulfillmentContact.address.address2 %}
											<div>
												{{ fulfillmentContact.address.address2 }}
											</div>
										{% endif %}


										{% if fulfillmentContact.address.address3 %}
											<div>
												{{ fulfillmentContact.address.address3 }}
											</div>
										{% endif %}


										{% if fulfillmentContact.address.address4 %}
											<div>
												{{ fulfillmentContact.address.address4 }}
											</div>
										{% endif %}


										<div>
											{{ fulfillmentContact.address.cityOrTown }}
											{% if fulfillmentContact.address.cityOrTown && fulfillmentContact.address.stateOrProvince %}, {% endif %}
											{{ fulfillmentContact.address.stateOrProvince }} {{ fulfillmentContact.address.postalOrZipCode }}
										</div>


										{% if fulfillmentContact.phoneNumbers.home %}
											<div>
												{{ fulfillmentContact.phoneNumbers.home }} (home)
											</div>
										{% endif %}


										{% if fulfillmentContact.phoneNumbers.work %}
											<div>
												{{ fulfillmentContact.phoneNumbers.work }} (work)
											</div>
										{% endif %}


										{% if fulfillmentContact.phoneNumbers.mobile %}
											<div>
												{{ fulfillmentContact.phoneNumbers.mobile }} (mobile)
											</div>
										{% endif %}


										<div>
											{{ fulfillmentContact.email }}
										</div>

									{% endwith %}

								</td>


								<td class="order-totals">
									<div class="label">Totals</div>
									<div class="price-total">{{ model.total|currency }}</div>
									<div class="item-total">
										{% if model.itemsOrdered %}
											{{ model.itemsOrdered }} items
										{% endif %}
									</div>
								</td>

							</tr>
						</tbody>
					</table>
				</div>


				<div class="section section-orderitems">

					<h2>Items Ordered</h2>

					<table class="grid">
						<thead>
							<tr>
								<th>Code</th>
								<th>Products</th>
								<th>Fulfillment</th>
								<th class="currency-column">Price</th>
								<th class="quantity-column">Qty</th>
								<th class="currency-column">Item Total</th>
							</tr>
						</thead>

						<tfoot class="order-totals-breakdown">
							<tr>
								<td colspan="5">Subtotal</td>
								<td>{{ model.discountedSubtotal|currency }}</td>
							</tr>

							{% for discount in model.orderDiscounts %}
								{% if not discount.excluded %}
									<tr>
										<td colspan="5">Discount ({{ discount.discount.name }})</td>
										<td>({{ discount.impact|currency }})</td>
									</tr>
								{% endif %}
							{% endfor %}


							{% if model.storeCredit and model.storeCredit > 0 %}
								<tr>
									<td colspan="5">Store Credit</td>
									<td>({{ model.storeCredit|currency }})</td>
								</tr>
							{% endif %}


							{% if model.dutyTotal > 0 %}
								<tr>
									<td colspan="5">Duties and Taxes</td>
									<td>{% filter currency %} {{ model.dutyTotal|add:model.taxTotal }} {% endfilter %}</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">Tax</td>
									<td>{{ model.taxTotal|currency }}</td>
								</tr>
							{% endif %}


							<tr>
								<td colspan="5">Shipping ({{ model.fulfillmentInfo.shippingMethodName }})</td>
								<td>{{ model.shippingSubTotal|currency }}</td>
							</tr>


							{% for shippingDiscount in model.shippingDiscounts %}
								{% if not shippingDiscount.excluded %}
									<tr>
										<td colspan="5">Shipping Discount ({{ shippingDiscount.discount.discount.name }})</td>
										<td>({{ shippingDiscount.discount.impact|currency }})</td>
									</tr>
								{% endif %}
							{% endfor %}


							{% if model.handlingTotal > 0 %}
								<tr>
									<td colspan="5">Handling</td>
									<td>{{ model.handlingTotal|currency }}</td>
								</tr>
							{% endif %}


							{% if model.feeTotal > 0 %}
								<tr>
									<td colspan="5">Fees</td>
									<td>{{ model.feeTotal|currency }}</td>
								</tr>
							{% endif %}


							{% if model.adjustment and model.adjustment.amount != 0 %}
								<tr>
									<td colspan="5">Adjustments</td>
									<td>
										{% if model.adjustment %}
											{{ model.adjustment.amount|currency }}
										{% endif %}
									</td>
								</tr>
							{% endif %}


							<tr>
								<td colspan="5">{{ labels.orderTotal }}</td>
								<td>{{ model.total|currency }}</td>
							</tr>

						</tfoot>


						<tbody>
							{% for item in model.items %}
								<tr>

									<td>
										{% if item.product.variationProductCode %}
											{{ item.product.variationProductCode }}
										{% else %}
											{{ item.product.productCode }}
										{% endif %}
									</td>

									<td>
										<div class="product-name">{{ item.product.name }}</div>

										{% for option in item.product.options %}
											<div class="product-option">
												<em class="product-option-label">[option]</em>{{ option.name }}: {{ option.value }}
											</div>
										{% endfor %}

										{% for product in item.product.bundledProducts %}
											<div class="bundled-product">
												<em class="product-option-label">[includes]</em>{{ product.productCode }} - {{ product.name }} (Qty. {{ product.quantity }})
											</div>
										{% endfor %}

										{% for discount in item.productDiscounts %}
											<div class="discount">
												<span class="product-discount-label">Discount (</span>{{ discount.discount.name }}<span>)</span>
											</div>
										{% endfor %}
									</td>

									<td>
										{% if "item.fulfillmentLocationCode" %}
											{{ item.fulfillmentMethod }} ({{ item.fulfillmentLocationCode }})
										{% endif %}
									</td>

									<td class="currency-column">{{ item.unitPrice.extendedAmount|currency }}</td>

									<td class="quantity-column">{{ item.quantity }}</td>

									<td class="currency-column">
										{{ item.subtotal|currency }} <br/>
										{% if item.discountTotal != 0 %}
											({{ item.discountTotal|currency }})
										{% endif %}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>


				<div class="section section-payment">

					<h2>Payment Details</h2>

					{% if not(model.payments) %}
						<p class="message">No payment details were provided.</p>
					{% endif %}


					{% if model.payments.length > 0 %}
						<table class="grid">
							<thead>
								<tr>
									<th>Date</th>
									<th>Status</th>
									<th>Type</th>
									<th>Info</th>
									<th>Exp Date</th>
									<th>Amount</th>
								</tr>
							</thead>


							<tbody>
								{% for payment in model.payments %}
									{% if payment.status != "Voided" %}
										<tr>
											<td>{{ payment.auditInfo.createDate|date(themeSettings.backofficeDateTimeFormat) }}</td>

											<td>{{ payment.status }}</td>


											{% if payment.paymentType == "CreditCard" %}

												{% with payment.billingInfo.card as billingCard %}
													<td>{{ billingCard.paymentOrCardType }}</td>

													<td>{{ billingCard.cardNumberPartOrMask }}</td>

													<td>
														{% if billingCard.expireMonth %}
															{{ billingCard.expireMonth }}/{{ billingCard.expireYear }}
														{% endif %}
													</td>
												{% endwith %}

											{% else %}

												{% if payment.paymentType == "Check" %}
													<td>Check</td>

													<td>
														{% for interaction in payment.interactions %}
															{% if interaction.interactionType == "Captured" %}

															{% endif %}
														{% endfor %}
													</td>

													<td>N/A</td>
												{% else %}
													{% if payment.paymentType == "StoreCredit" %}
														<td>Gift Card/Store Credit</td>

														<td>{{ payment.billingInfo.storeCreditCode }}</td>

														<td>N/A</td>
													{% else %}
														<td>{{ payment.paymentType }}</td>

														<td>&nbsp;</td>

														<td>&nbsp;</td>
													{% endif %}
												{% endif %}

											{% endif %}

											<td>
												{% if payment.amountCollected > 0 %}
													{{ payment.amountCollected | currency }}
												{% else %}
													{{ payment.amountRequested | currency }}
												{% endif %}
											</td>

										</tr>
									{% endif %}
								{% endfor %}
							</tbody>
						</table>
					{% endif %}
				</div>


				{% if model.shopperNotes %}
					<div class="section section-notes">

						<h2>Notes</h2>

						<table class="grid">
							<thead>
								<tr>
									<th>Date</th>
									<th>Author</th>
									<th>Comment Type</th>
									<th>Message</th>
								</tr>
							</thead>


							<tbody>
								{% if model.shopperNotes.comments %}
									<tr>
										<td>{{ model.submittedDate | date(themeSettings.backofficeDateTimeFormat) }}</td>
										<td>Customer</td>
										<td>Shopper Notes</td>
										<td>{{ model.shopperNotes.comments }}</td>
									</tr>
								{% endif %}

								{% if model.shopperNotes.giftMessage %}
									<tr>
										<td>{{ model.submittedDate | date(themeSettings.backofficeDateTimeFormat) }}</td>
										<td>Customer</td>
										<td>Gift Message</td>
										<td>{{ model.shopperNotes.giftMessage }}</td>
									</tr>
								{% endif %}
							</tbody>
						</table>
					</div>
				{% endif %}


				{% if model.fulfillmentInfo.shippingMethodName or (model.packages and model.packages.length) or (model.pickups and model.pickups.length) %}
					<div class="section section-fulfillment">
						<h2>Fulfillment</h2>

						{% if model.packages && model.packages.length %}
							<div class="subsection-wrapper">

								<h3>Shipping</h3>

								<table class="subsection">
									<tbody>
										{% for package in model.packages %}
											<tr>
												<td>Package #{{ forloop.counter }}</td>

												<td>
													<span class="label">Status:</span> {{ package.status }}
												</td>
											</tr>

											<tr>
												<td>
													<div class="label">Ship To</div>

													{% with model.fulfillmentInfo.fulfillmentContact as fulfillmentContact %}

														<div>
															{{ fulfillmentContact.firstName }} {{ fulfillmentContact.lastNameOrSurname }}
														</div>


														<div>
															{{ fulfillmentContact.address.address1 }}
														</div>


														{% if fulfillmentContact.address.address2 %}
															<div>
																{{ fulfillmentContact.address.address2 }}
															</div>
														{% endif %}


														{% if fulfillmentContact.address.address3 %}
															<div>
																{{ fulfillmentContact.address.address3 }}
															</div>
														{% endif %}


														{% if fulfillmentContact.address.address4 %}
															<div>
																{{ fulfillmentContact.address.address4 }}
															</div>
														{% endif %}


														<div>
															{{ fulfillmentContact.address.cityOrTown }}, {{ fulfillmentContact.address.stateOrProvince }} {{ fulfillmentContact.address.postalOrZipCode }}
														</div>


														{% if fulfillmentContact.phoneNumbers.home %}
															<div>
																{{ fulfillmentContact.phoneNumbers.home }} (home)
															</div>
														{% endif %}


														{% if fulfillmentContact.phoneNumbers.work %}
															<div>
																{{ fulfillmentContact.phoneNumbers.work }} (work)
															</div>
														{% endif %}


														{% if fulfillmentContact.phoneNumbers.mobile %}
															<div>
																{{ fulfillmentContact.phoneNumbers.mobile }} (mobile)
															</div>
														{% endif %}


														<div>
															{{ fulfillmentContact.email }}
														</div>

													{% endwith %}
												</td>


												<td>
													<table>
														<tbody>
															<tr>
																<td>
																	<div class="label">Shipping Method</div>
																	<div>
																		{% if package.shippingMethodCode == model.fulfillmentInfo.shippingMethodCode %}
																			{{ model.fulfillmentInfo.shippingMethodName }}

																		{% else %}
																			{% if package.shippingMethodName %}
																				{{ package.shippingMethodName }}

																			{% else %}
																				{{ package.shippingMethodCode }}

																			{% endif %}
																		{% endif %}
																	</div>
																</td>

																<td>
																	<div class="label">Packaging Type</div>
																	<div>{{ package.packagingType }}</div>
																</td>

																<td>
																	<div class="label">Tracking Number</div>
																	<div>{{ package.trackingNumber }}</div>
																</td>
															</tr>

															<tr>
																<td>
																	<div class="label">Total Weight</div>
																	<div>{{ package.measurements.weight.value }} {{ package.measurements.weight.unit }}</div>
																</td>
															</tr>
														</tbody>
													</table>

												</td>
											</tr>


											<tr>
												<td colspan="4">
													<table class="grid">
														<thead>
															<tr>
																<th>Code</th>
																<th>Products</th>
																<th>Weight</th>
																<th>Quantity</th>
															</tr>
														</thead>


														<tbody>
															{% for packageItem in package.items %}
																<tr>
																	<td>{{ packageItem.productCode }}</td>

																	<td>
																		<div class="product-name">{{ packageItem.productname }}</div>
																	</td>

																	<td>{{ packageItem.adjustedweight.value }} {{ packageItem.adjustedweight.unit }}</td>

																	<td>{{ packageItem.quantity }}</td>
																</tr>
															{% endfor %}
														</tbody>
													</table>

												</td>
											</tr>
										{% endfor %}

									</tbody>
								</table>
							</div>
						{% endif %}


						{% if model.pickups && model.pickups.length %}
							<div class="subsection-wrapper">

								<h3>In-Store Pickup</h3>

								{% for pickup in model.pickups %}
									<table class="subsection">
										<tbody>
											<tr>
												<td>Pickup #{{ forloop.counter }}</td>
												<td>Status: {{ pickup.status }}</td>
											</tr>


											<tr>
												<td>
													<div class="label">Location</div>
													<div>{{ pickup.fulfillmentLocationCode }}</div>
												</td>

												<td>
													<div class="label">Pickup Date</div>

													{% if pickup.fulfillmentDate %}
														<div>{{ pickup.fulfillmentDate|date("m/d/Y") }}</div>
													{% endif %}

												</td>
											</tr>


											<tr>
												<td colspan="4">
													<table class="grid">

														<thead>
															<tr>
																<th>Code</th>
																<th>Products</th>
																<th>Weight</th>
																<th>Quantity</th>
															</tr>
														</thead>


														<tbody>

															{% for pickupItem in pickup.items %}
																<tr>
																	<td>
																		{{ pickupItem.productCode }}
																	</td>

																	<td>
																		<div class="product-name">{{ pickupItem.productname }}</div>
																	</td>

																	<td>
																		{{ pickupItem.adjustedweight.value }} {{ pickupItem.adjustedweight.unit }}
																	</td>

																	<td>
																		{{ pickupItem.quantity }}
																	</td>
																</tr>
															{% endfor %}

														</tbody>
													</table>

												</td>
											</tr>
										</tbody>
									</table>
								{% endfor %}

							</div>
						{% endif %}

					</div>
				{% endif %}


			</td>
		</tr>
	</tbody>
</table>

{% endblock body-content %}
