<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

	{% if pageContext.isEditMode %}
		{% include "modules/json-required-for-hyprlive" %}
		{% include "modules/trailing-scripts" %}
		{% cms_resources %}
	{% endif %}

</head>

<body>
	{% if pageContext.isEditMode && pageContext.isDebugMode %}
		{% include "modules/debug-emails" %}
	{% endif %}

	<table id="backgroundTable" class="body" cellpadding="0" cellspacing="0" border="0">
		<tr>
			<td class="center" align="center" valign="top">
				<center>
					<table class="container">
						<tr>
							<td>
								<table class="row">
									<tr>
										<td class="wrapper last">

											<div>{{ pageContext.cmsContext.page.document.properties.html_1|safe }}</div>

											{% block body-content %}
											{% endblock body-content %}

											<div>{{ pageContext.cmsContext.page.document.properties.html_2|safe }}</div>

										</td>
									</tr>
								</table> <!-- end body content -->

								<table class="row">
									<tr>
										<td class="wrapper last">
											<p>
												{{ labels.emailClosing|string_format(siteContext.generalSettings.websiteName)|safe }},
												{{ siteContext.domains.current.domainName|urlize|safe }}
											</p>
										</td>
									</tr>
								</table>

								<!-- necessary? -->
								<table class="row">
									<tr>
										<td class="wrapper last"></td>
										<td class="expander"></td>
									</tr>
								</table>
							</td>
						</tr>
					</table> <!-- end main content container -->
				</center>
			</td>
		</tr>
	</table> <!-- end main container -->
</body>
</html>
