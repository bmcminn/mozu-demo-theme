{
    "id": "video",
    "displayName": "Video",
    "displayTemplate": "cms/video",
    "icon": "/resources/admin/widgets/08_video.png",
    "validPageTypes": [
        "*"
    ],

    "defaultConfig": {
        "autoplay": false,
        "loop": false,
        "timestart": "0:00",

        "youtubeRel": false,
        "youtubeControls": true,
        "youtubeShowinfo": true,
        "youtubeNocookie": false,

        "vimeoPortrait": true,
        "vimeoTitle": true,
        "vimeoByline": true,
        "vimeoColor": "#00adef"
    },

    "editViewFields": [
        {
            "fieldLabel": "Video ID or URL",
            "xtype": "mz-input-text",
            "name": "url",
            "allowBlank": false,
            "anchor": "90%"
        },

        {
            "anchor": "93%",
            "xtype": "label",
            "text": "<h2>Optional Video config</h2>",
            "margin": "20px 0 0 0"
        },
            {
                "fieldLabel": "Autoplay this video",
                "xtype": "mz-input-checkbox",
                "name": "autoplay"
            },
            {
                "fieldLabel": "Loop this video",
                "xtype": "mz-input-checkbox",
                "name": "loop"
            },
            {
                "anchor": "200px",
                "xtype": "mz-input-text",
                "fieldLabel": "Start video at specific time (ex: mm:ss)",
                "name": "timestart"
            },


        {
            "xtype": "label",
            "text": "<h2>YouTube Settings</h2>"
        },
            {
                "fieldLabel": "Show Related videos after video",
                "xtype": "mz-input-checkbox",
                "name": "youtubeRel"
            },
            {
                "fieldLabel": "Show video controls",
                "xtype": "mz-input-checkbox",
                "name": "youtubeControls"
            },
            {
                "fieldLabel": "Show video info",
                "xtype": "mz-input-checkbox",
                "name": "youtubeShowinfo"
            },
            {
                "fieldLabel": "Show video info",
                "xtype": "mz-input-checkbox",
                "name": "youtubeNocookie"
            },


        {
            "xtype": "label",
            "text": "<h2>Vimeo Settings</h2>"
        },
            {
                "fieldLabel": "Show Portrait",
                "xtype": "mz-input-checkbox",
                "name": "vimeoPortrait"
            },
            {
                "fieldLabel": "Show Title",
                "xtype": "mz-input-checkbox",
                "name": "vimeoTitle"
            },
            {
                "fieldLabel": "Show Byline",
                "xtype": "mz-input-checkbox",
                "name": "vimeoByline"
            },
            {
                "fieldLabel": "Vimeo Player controls color",
                "xtype": "mz-input-color",
                "name": "vimeoColor"
            }

    ]
}
