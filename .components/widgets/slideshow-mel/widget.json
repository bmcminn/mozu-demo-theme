                //     "xtype": "label",
                //     "text": "OR"
                // },

            {
                "name": "customTargetUrl",
                "fieldLabel": "Custom Target Url",
                "anchor": "100%"
            },

            {
                "name": "image",
                "fieldLabel": "Slide Image",
                "xtype": "mz-input-image"
            },


            // ======================================================================

            {
                "xtype": "box",
                "autoEl": {
                    "html": "<hr/><h3>Custom Markup and Styles</h3><ul><li><code>{0}</code>: Target Url</li><li><code>{1}</code>: Custom Target Url</li><li><code>{2}</code>: Slide Image</li></ul>"
                }
            },

            {
                "name": "customMarkup",
                "fieldLabel": "Custom Slide Markup/Content",
                "xtype": "mz-input-code",
                "anchor": "100%"
            },

            {
                "name": "customStyles",
                "fieldLabel": "Custom Slide Styles",
                "xtype": "mz-input-code",
                "anchor": "100%"
            }

