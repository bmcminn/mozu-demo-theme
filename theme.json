{
	"about": {
		"name": "Awesome Theme v1.0.0",
		"version": "1.0.0",
		"extends": "core7",
		"isDesktop": true,
		"isTablet": true,
		"isMobile": true
	},
	"settings": {
		"showBreadcrumbs": false,
		"bodyBackgroundColor": "#f90",
		"bodyBackgroundImage": "http://cdn-sb.mozu.com/10629-m1/cms/files/bright-lights_1.png",
		"canonicalProtocol": "https",
		"canonical HomepageSlug": "homepage",
		"showCategoryFacets": null,
		"hiddenCatgeries": null,
		"contactUsEmail": "contact@aubuchon.com"
	},
	"pageSettings": {
		"itesm": [
			{
				"validPageTypes": [
					"*"
				]
			}
		]
	},
	"pageTypes": [
		{
			"documentType": "web_page",
			"entityType": "webpage",
			"id": "company-info",
			"template": "pages/company-info",
			"customEditor": "about-us",
			"title": "Company Info",
			"userCreatable": true,
			"zones": []
		}
	],
	"widgets": [
		{
			"id": "contact-us",
			"title": "contact-us",
			"displayName": "Company Contact",
			"displayTemplate": "cms/company-contact",
			"icon": "/resources/admin/widgets/company-contact.png",
			"validPageTypes": [
				"*"
			],
			"defaultConfig": {},
			"editViewFields": [
				{
					"fieldLabel": "Company Phone #",
					"name": "companyPhone",
					"xtype": "mz-input-text"
				},
				{
					"fieldLabel": "Company Address",
					"name": "companyAddress",
					"xtype": "mz-input-richtext"
				},
				{
					"fieldLabel": "Hours",
					"name": "companyHours",
					"xtype": "mz-input-richtext"
				}
			]
		},
		{
			"id": "employee-card",
			"displayName": "Employee Card",
			"displayTemplate": "cms/employee-card",
			"icon": "/resources/admin/widgets/employee-card.png",
			"validPageTypes": [
				"*"
			],
			"defaultConfig": {
				"anchor": "100%",
				"xtype": "mz-input-text",
				"maxWidth": 200
			},
			"editViewFields": [
				{
					"fieldLabel": "Employee Name",
					"name": "employeeName"
				},
				{
					"fieldLabel": "Employee Title",
					"name": "employeeTitle"
				},
				{
					"fieldLabel": "Employee Bio",
					"name": "employeeBio",
					"xtype": "mz-input-textarea"
				},
				{
					"fieldLabel": "Image Max Width",
					"name": "maxWidth"
				},
				{
					"fieldLabel": "Employee Image",
					"name": "employeeImage",
					"xtype": "mz-input-image",
					"dataFormat": "urlOnly"
				}
			]
		},
		{
			"id": "page_heading",
			"displayName": "Heading",
			"displayTemplate": "cms/heading",
			"icon": "/resources/admin/widgets/heading.png",
			"validPageTypes": [
				"*"
			],
			"defaultConfig": {
				"anchor": "100%",
				"xtype": "mz-input-text",
				"headingText": "Heading Text here",
				"headingType": "h1"
			},
			"editViewFields": [
				{
					"name": "headingText",
					"fieldLabel": "Heading Text"
				},
				{
					"name": "headingType",
					"fieldLabel": "Heading Type",
					"xtype": "mz-input-dropdown",
					"store": [
						[
							"h1",
							"H1"
						],
						[
							"h2",
							"H2"
						],
						[
							"h3",
							"H3"
						]
					]
				}
			]
		},
		{
			"id": "video",
			"displayName": "Video",
			"displayTemplate": "cms/video",
			"icon": "/resources/admin/widgets/08_video.png",
			"validPageTypes": [
				"*"
			],
			"defaultConfig": {
				"anchor": "100%",
				"xtype": "mz-input-text"
			},
			"editViewFields": [
				{
					"fieldLabel": "Video URL",
					"name": "url"
				}
			]
		}
	]
}
