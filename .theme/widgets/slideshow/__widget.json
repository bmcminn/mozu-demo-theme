{
    "id": "namespace~slideshow",
    "displayName": "Slideshow",
    "displayTemplate": "cms/slideshow",
    "icon": "/resources/admin/widgets/09_slideshow.png",
    "validPageTypes": [
        "*"
    ],
    "defaultConfig": {
        "anchor": "100%",
        "xtype": "mz-input-text",

        // ----------------------------------

        "lazyLoadImages": true,

        "slideImage1": null,
        "slideImage2": null,
        "slideImage3": null,
        "slideImage4": null,
        "slideImage5": null,

        // ----------------------------------

        // TODO: figure out how to make the commented features configurable

        "accessibility":        true,
        "autoplay":             false,
        "autoplaySpeed":        3000,
        "centerMode":           false,
        "centerPadding":        "50px",
        "cssEase":              "ease",
        // "customPaging":         "",
        "dots":                 false,
        "dotsClass":            "slick-dots",
        "draggable":            true,
        "easing":               "linear",
        "edgeFriction":         0.15,
        "fade":                 false,
        "arrows":               true,
        // "appendArrows":         $element),
        // "appendDots":           $element),
        "mobileFirst":          false,
        // "prevArrow":            (html,
        // "nextArrow":            (html,
        "infinite":             true,
        "initialSlide":         0,
        "lazyLoad":             "ondemand",
        "pauseOnHover":         true,
        "pauseOnDotsHover":     false,
        "respondTo":            "window",
        "responsive":           null,
        "rows":                 1,
        "slide":                "",
        "slidesPerRow":         1,
        "slidesToShow":         1,
        "slidesToScroll":       1,
        "speed":                300,
        "swipe":                true,
        "swipeToSlide":         false,
        "touchMove":            true,
        "touchThreshold":       5,
        "useCSS":               true,
        "variableWidth":        false,
        "vertical":             false,
        "verticalSwiping":      false,
        "rtl":                  false,
        "waitForAnimate":       true,
        "zIndex":               1000

    },
    "editViewFields": [

        {
            "xtype": "label",
            "text": "Slide configurations"
        },

            {
                "name": "lazyLoadImages",
                "fieldLabel": "Lazy Load slides <a title=\"More info about lazy loading images\" href=\"https:\/\/css-tricks.com\/snippets\/javascript\/lazy-loading-images\/\">[?]</a>",
                "xtype": "mz-input-checkbox"
            },


        // ==================================================
        // SLIDE ONE CONFIG
        // --------------------------------------------------

        {
            "xtype": "box",
            "autoEl": {
                "html": "<hr/>"
            }
        },

            {
                "name": "slideUrl1",
                "fieldLabel": "Slide 1 Url",
                "xtype": "mz-input-navnode"
            },

            {
                "name": "slideUrl1Custom",
                "fieldLabel": "Slide 1 Url (custom url)"
            },

            {
                "name": "slideImage1",
                "fieldLabel": "Slide 1 Image",
                "xtype": "mz-input-image"
            },

            // EXAMPLE IMAGES:
            // http://fotonin.com/data_images/out/10/839000-landscape-photos.jpg
            // http://www.dffy.co/wp-content/uploads/2015/06/landscape-architecture-plan-graphics-inspiration-abdul-hakim-kussim-landscape-architect-and-illustrator.jpg


        // ==================================================
        // SLIDE TWO CONFIG
        // --------------------------------------------------

        {
            "xtype": "box",
            "autoEl": {
                "html": "<hr/>"
            }
        },

            {
                "name": "slideUrl2",
                "fieldLabel": "Slide 2 Url",
                "xtype": "mz-input-navnode"
            },

            {
                "name": "slideUrl2Custom",
                "fieldLabel": "Slide 2 Url (custom url)"
            },

            {
                "name": "slideImage2",
                "fieldLabel": "Slide 2 Image",
                "xtype": "mz-input-image"
            },


        // ==================================================
        // SLIDE THREE CONFIG
        // --------------------------------------------------

        {
            "xtype": "box",
            "autoEl": {
                "html": "<hr/>"
            }
        },

            {
                "name": "slideUrl3",
                "fieldLabel": "Slide 3 Url",
                "xtype": "mz-input-navnode"
            },

            {
                "name": "slideUrl3Custom",
                "fieldLabel": "Slide 3 Url (custom url)"
            },

            {
                "name": "slideImage3",
                "fieldLabel": "Slide 3 Image",
                "xtype": "mz-input-image"
            },


        // ==================================================
        // SLIDE FOUR CONFIG
        // --------------------------------------------------

        {
            "xtype": "box",
            "autoEl": {
                "html": "<hr/>"
            }
        },

            {
                "name": "slideUrl4",
                "fieldLabel": "Slide 4 Url",
                "xtype": "mz-input-navnode"
            },

            {
                "name": "slideUrl4Custom",
                "fieldLabel": "Slide 4 Url (custom url)"
            },

            {
                "name": "slideImage4",
                "fieldLabel": "Slide 4 Image",
                "xtype": "mz-input-image"
            },


        // ==================================================
        // SLIDE FIVE CONFIG
        // --------------------------------------------------
        {
            "xtype": "box",
            "autoEl": {
                "html": "<hr/>"
            }
        },

            {
                "name": "slideUrl5",
                "fieldLabel": "Slide 5 Url",
                "xtype": "mz-input-navnode"
            },

            {
                "name": "slideUrl5Custom",
                "fieldLabel": "Slide 5 Url (custom url)"
            },

            {
                "name": "slideImage5",
                "fieldLabel": "Slide 5 Image",
                "xtype": "mz-input-image"
            },


        // ==================================================

        {
            "xtype": "box",
            "autoEl": {
                "html": "<hr/>"
            }
        },


        // ==================================================

        {
            "xtype": "label",
            "text": "Slideshow Options"
        },

            {
                "name": "accessibility",
                "fieldLabel": "Enables tabbing and arrow key navigation",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "autoplay",
                "fieldLabel": "Enables auto play of slides",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "autoplaySpeed",
                "fieldLabel": "Auto play change interval",
                "xtype": "mz-input-number"
            },
            {
                "name": "centerMode",
                "fieldLabel": "Enables centered view with partial prev/next slides. Use with odd numbe}red slidesToShow counts.",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "centerPadding",
                "fieldLabel": "Side padding when in center mode. (px or %)"
            },
            {
                "name": "cssEase",
                "fieldLabel": "CSS3 easing"
            },
            // {
            //  "name": "customPaging",
            //  "fieldLabel": "a    Custom paging templates. See source for use example.",
            // },
            {
                "name": "dots",
                "fieldLabel": "Current slide indicator dots",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "dotsClass",
                "fieldLabel": "Class for slide indicator dots container"
            },
            {
                "name": "draggable",
                "fieldLabel": "Enables desktop dragging",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "easing",
                "fieldLabel": "animate() fallback easing"
            },
            {
                "name": "edgeFriction",
                "fieldLabel": "Resistance when swiping edges of non-infinite carousels",
                "xtype": "mz-input-number"
            },
            {
                "name": "fade",
                "fieldLabel": "Enables fade",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "arrows",
                "fieldLabel": "Enable Next/Prev arrows",
                "xtype": "mz-input-checkbox"
            },
            // {
            //  "name": "appendArrows",
            //      // string   $(element)
            //  "fieldLabel": "Change where the navigation arrows are attached (Selector, htmlString, Array, Element, jQuery object)",
            // },
            // {
            //  "name": "appendDots",
            //      // string   $(element)
            //  "fieldLabel": "Change where the navigation dots are attached (Selector, htmlString, Array, Element, jQuery object)",
            // },
            {
                "name": "mobileFirst",
                "fieldLabel": "Responsive settings use mobile first calculation",
                "xtype": "mz-input-checkbox"
            },
            // {
            //  "name": "prevArrow",
            //      // string (html
            //  "fieldLabel": "jQuery selector) object (DOM node",
            // },
            // {
            //  "name": "nextArrow",
            //      // string (html
            //  "fieldLabel": "jQuery selector) object (DOM node",
            // },
            {
                "name": "infinite",
                "fieldLabel": "Infinite looping",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "initialSlide",
                "fieldLabel": "Slide to start on",
                "xtype": "mz-input-number"
            },
            {
                "name": "lazyLoad",
                "fieldLabel": "Accepts 'ondemand' or 'progressive' for lazy load technique"
            },
            {
                "name": "pauseOnHover",
                "fieldLabel": "Pauses autoplay on hover",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "pauseOnDotsHover",
                "fieldLabel": "Pauses autoplay when a dot is hovered",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "respondTo",
                "fieldLabel": "Width that responsive object responds to. Can be 'window', 'slider' or 'min' (the smaller of the two)."
            },
            // {
            //  "name": "responsive",
            //  "fieldLabel": "Object containing breakpoints and settings objects (see demo). Enables settings sets at given screen width. Set settings to \"unslick\" instead of an object to disable slick at a given breakpoint.",
            //  "xtype": "mz-input-textarea"
            // },
            {
                "name": "rows",
                "fieldLabel": "Setting this to more than 1 initializes grid mode. Use slidesPerRow to set how many slides should be in each row.",
                "xtype": "mz-input-number"
            },
            {
                "name": "slide",
                "fieldLabel": "Slide element query"
            },
            {
                "name": "slidesPerRow",
                "fieldLabel": "With grid mode intialized via the rows option, this sets how many slides are in each grid row. dver",
                "xtype": "mz-input-number"
            },
            {
                "name": "slidesToShow",
                "fieldLabel": "# of slides to show at a time",
                "xtype": "mz-input-number"
            },
            {
                "name": "slidesToScroll",
                "fieldLabel": "# of slides to scroll at a time",
                "xtype": "mz-input-number"
            },
            {
                "name": "speed",
                "fieldLabel": "Transition speed",
                "xtype": "mz-input-number"
            },
            {
                "name": "swipe",
                "fieldLabel": "Enables touch swipe",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "swipeToSlide",
                "fieldLabel": "Swipe to slide irrespective of slidesToScroll",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "touchMove",
                "fieldLabel": "Enables slide moving with touch",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "touchThreshold",
                "fieldLabel": "To advance slides, the user must swipe a length of (1/touchThreshold) * the width of the slider.",
                "xtype": "mz-input-number"
            },
            {
                "name": "useCSS",
                "fieldLabel": "Enable/Disable CSS Transitions",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "variableWidth",
                "fieldLabel": "Disables automatic slide width calculation",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "vertical",
                "fieldLabel": "Vertical slide direction",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "verticalSwiping",
                "fieldLabel": "Changes swipe direction to vertical",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "rtl",
                "fieldLabel": "Change the slider's direction to become right-to-left",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "waitForAnimate",
                "fieldLabel": "Ignores requests to advance the slide while animating",
                "xtype": "mz-input-checkbox"
            },
            {
                "name": "zIndex",
                "fieldLabel": "Set the zIndex values for slides, useful for IE9 and lower",
                "xtype": "mz-input-number"
            }


    ]
